---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Module from "../components/Module.astro";
import Footer from "../components/Footer.astro";
import { seoModules } from "../data/seoModules";
---

<Layout
  title="Free SEO Checklist 2026 - Complete AI SEO Guide & Tools | SarvaSEO"
  description="Free comprehensive SEO checklist with 47+ actionable steps. Learn how to improve SEO rankings with AI tools, keyword research, technical SEO, and proven strategies. Start ranking higher today!"
>
  <!-- Hero Section -->
  <Hero />
  <!-- Main Content - Performance Optimized -->
  <main class="min-h-screen max-w-3xl mx-auto px-16 space-y-8 main-content">
    <!-- Render all modules for better SEO and user experience -->
    {seoModules.map((module) => <Module module={module} />)}
  </main>

  <!-- SEO-Optimized Footer -->
  <Footer />
</Layout>

<style>
  /* Global page styles */
  main {
    scroll-margin-top: 2rem;
  }
</style>
