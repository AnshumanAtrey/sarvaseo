---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Module from "../components/Module.astro";
import Footer from "../components/Footer.astro";
import { seoModules } from "../data/seoModules";
---

<Layout
  title="Free SEO Checklist 2025 - Complete AI SEO Guide & Tools | SarvaSEO"
  description="Free comprehensive SEO checklist with 47+ actionable steps. Learn how to improve SEO rankings with AI tools, keyword research, technical SEO, and proven strategies. Start ranking higher today!"
>
  <!-- Hero Section -->
  <Hero />
  <!-- Main Content - Performance Optimized -->
  <main class="min-h-screen max-w-3xl mx-auto px-16 space-y-8 main-content">
    <!-- Load only first 3 modules initially for better performance -->
    {seoModules.slice(0, 3).map((module) => <Module module={module} />)}
    
    <!-- Lazy load remaining modules -->
    <div id="lazy-modules" class="space-y-8">
      <!-- Remaining modules will be loaded on scroll -->
    </div>
    
    <!-- Loading indicator -->
    <div id="loading-indicator" class="hidden text-center py-8">
      <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-gray-900"></div>
      <p class="mt-2 text-sm text-gray-600">Loading more content...</p>
    </div>
  </main>

  <!-- SEO-Optimized Footer -->
  <Footer />
</Layout>

<style>
  /* Global page styles */
  main {
    scroll-margin-top: 2rem;
  }
</style>
